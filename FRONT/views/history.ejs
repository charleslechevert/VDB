<%- include("partials/setup") %>
<%- include("partials/header") %>


<section class="triplist">
<div>
    <div class="tripform__title--container">
        <h2 class="tripform__title">Historique</h2>
    </div>
    <div>
        <% for (trip of trips) { %>
        <!-- START TRIP LINEE-->
        <a href="/modifytrip/<%= trip.id %>" class="tripline__container">
            <div class="tripline__subcontainer">
                
                <div class="tripline__subsubcontainer">
                    <img class="tripline__info-logo" src="sailor.png" alt="">
                    <div class="tripline__info-text"><%= trip.fname %></div>
                </div>
                <div class="tripline__subsubcontainer">
                    <img class="tripline__info-logo" src="ship.png" alt="">
                    <div class="tripline__info-text"><%= trip.boat %></div>
                </div>
                <div class="tripline__subsubcontainer">
                    <img class="tripline__info-logo" src="seat.png" alt="">
                    <div class="tripline__info-text"><%= trip.quantity %> passagers</div>
                </div>

            </div>

            <div class="tripline__subcontainer2">
                <div class="tripline__subsubcontainer">
                    <div class="tripline__info-text tripline__info-text-background1"><%= trip.type_trip %></div>
                    <div class="tripline__info-text tripline__info-text-background2"><%= trip.harbour %></div>
                </div>
                <div class="tripline__subsubcontainer">
                    <div class="tripline__info-text tripline__info-text-background3" id="day_trip"><%= trip.day_trip %></div>
                    <% if(!trip.delay_trip) { %>
                    <div class="tripline__info-text tripline__info-text-background4">Ã€ l'heure</div>
                    <% } else { %>
                    <div class="tripline__info-text tripline__info-text-background5">En retard</div>
                    <% } %>

                </div>
                
                <div class="tripline__hours"><%= trip.departure.slice(0,5) %> - <%= trip.arrival.slice(0,5) %></div>

            </div>
        </a>
            <!-- END TRIP LINEE-->
            <% } %>
        
    </div>
</div>
</section>

        </main>
    </body>
</html>