<%- include("partials/setup") %>
<%- include("partials/header") %>
<script src="trip.js" defer></script>

<section class="tripform">
    <div class="tripform__title--container">
        <h2 class="tripform__title">Ajouter une traversée</h2>
    </div>
    
    <form class="tripform__form" method="post">
        <label class="tripform__label">Jour</label>
        <% if (admin) { %>
        <input type="date" class="tripform__hours" value="<%=todayDate%>" max="<%=todayDate%>" name="day_trip" id="day_trip">
        <% } else { %>
            <p id="day_trip-fixed" class="tripform__date-fixed"> <%=todayDate_formatted%> </p>
            <% } %>
        <label class="tripform__label">Bateau</label> 
        <select name="boat" id="boat" class="tripform__select">
            <option class="tripform__option" value="BRÉHATINE">Bréhatine</option>
            <option class="tripform__option" value="ENEZ VRIAD">Enez Vriad</option>
            <option class="tripform__option" value="ENEZIZ">Eneziz</option>
            <option class="tripform__option" value="KEPHRENN">Kephrenn</option>
            <option class="tripform__option" value="KEHOPS">Kehops</option>
        </select>
        <label class="tripform__label">Type de traversée</label>
        <select name="type_trip" id="type_trip" class="tripform__select">
            <option class="tripform__option" value="DIRECTE">Directe</option>
            <option class="tripform__option" value="EXTÉRIEUR">Extérieur</option>
            <option class="tripform__option" value="AFFRÊTEMENT">Affrêtement</option>
        </select>
        <label class="tripform__label">Port</label>
        <select name="harbour" id="harbour" class="tripform__select">
            <option class="tripform__option" value="ARCOUEST">Arcouest</option>
            <option class="tripform__option" value="BRÉHAT">Bréhat</option>
            <option class="tripform__option" value="TOUR">Tour</option>
            <option class="tripform__option" value="ERQUY">Erquy</option>
            <option class="tripform__option" value="SAINT QUAY">Saint Quay</option>
            <option class="tripform__option" value="SAINT QUAY-BINIC">Saint Quay-Binic</option>
            <option class="tripform__option" value="TRIEUX">Trieux</option>
            <!-- <option class="tripform__option" value="PARC ÉOLIEN">Parc Éolien</option> -->
            <option class="tripform__option" value="ROUEN">Rouen</option>
            <option class="tripform__option" value="DAHOUËT">Dahouët</option>
            <option class="tripform__option" value="BAIE PAIMPOL">Baie Paimpol</option>
            <option class="tripform__option" value="ÉOLIEN ARCOUEST">Éolien Arcouest</option>
            <option class="tripform__option" value="ÉOLIEN ST QUAY">Éolien St Quay</option>

            <option class="tripform__option" value="BINIC">Binic</option>
            <option class="tripform__option" value="EOLIEN DAHOUËT">Eolien Dahouët</option>
            <option class="tripform__option" value="EOLIEN ERQUY">Eolien Erquy</option>
            <option class="tripform__option" value="ROUTE DES PHARES">Route des Phares</option>
        </select>
        <label class="tripform__label">Nombre de passagers</label>
        <input type ="number" name="quantity" class="tripform__input--passenger" required>
        <label class="tripform__label">Hors Quotas</label>
        <input type="number" name="no_quota" class="tripform__input--passenger" value="0" required>
        <label class="tripform__label" value="14:30">Heure de départ</label>
        <input class="tripform__hours" type="time" id="departure" name="departure"required>
        <label class="tripform__label">Retard</label>
        <div>
            <label>
                <input type="radio" id="tripform__delay-yes" name="delay_trip" value="true">
                OUI
            </label>
            <label>
                <input type="radio" id="tripform__delay-no" name="delay_trip" value="false" checked>
                NON
            </label>
        </div>
        <label id="tripform_reasonLabel" class="tripform__label">Raison du retard</label>
        <input id="tripform_reasonInput" class="tripform__input" name="reason">
        <input class="tripform__validate" type="submit">
        
    </form>
</section>

        </main>
    </body>
</html>
